{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "module": "commonjs",
    "pretty": true,
    "target": "es5",
    "lib": [
      "es2015",
      "dom"
    ],
    "experimentalDecorators": true,
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
